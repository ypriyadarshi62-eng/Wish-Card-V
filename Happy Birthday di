    <script>
        // Scratch Card Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const scratchCards = document.querySelectorAll('.scratch-card');
            
            scratchCards.forEach(card => {
                let isDrawing = false;
                let lastX = 0;
                let lastY = 0;
                const ctx = document.createElement('canvas').getContext('2d');
                
                // Create canvas overlay
                const canvas = document.createElement('canvas');
                const rect = card.getBoundingClientRect();
                canvas.width = card.offsetWidth;
                canvas.height = card.offsetHeight;
                canvas.style.position = 'absolute';
                canvas.style.top = '0';
                canvas.style.left = '0';
                canvas.style.cursor = 'pointer';
                
                // Set canvas context
                ctx.canvas.width = canvas.width;
                ctx.canvas.height = canvas.height;
                ctx.fillStyle = '#ddd';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                ctx.globalCompositeOperation = 'destination-out';
                
                // Add canvas to card
                card.appendChild(canvas);
                
                // Mouse events
                canvas.addEventListener('mousedown', (e) => {
                    isDrawing = true;
                    [lastX, lastY] = [e.offsetX, e.offsetY];
                });
                
                canvas.addEventListener('mousemove', (e) => {
                    if (!isDrawing) return;
                    
                    ctx.beginPath();
                    ctx.lineWidth = 30;
                    ctx.lineCap = 'round';
                    ctx.moveTo(lastX, lastY);
                    ctx.lineTo(e.offsetX, e.offsetY);
                    ctx.stroke();
                    
                    [lastX, lastY] = [e.offsetX, e.offsetY];
                    
                    // Check if enough has been scratched
                    checkScratched(canvas, card);
                });
                
                canvas.addEventListener('mouseup', () => {
                    isDrawing = false;
                });
                
                canvas.addEventListener('mouseout', () => {
                    isDrawing = false;
                });
                
                // Touch events for mobile
                canvas.addEventListener('touchstart', (e) => {
                    e.preventDefault();
                    isDrawing = true;
                    const touch = e.touches[0];
                    const rect = canvas.getBoundingClientRect();
                    [lastX, lastY] = [touch.clientX - rect.left, touch.clientY - rect.top];
                });
                
                canvas.addEventListener('touchmove', (e) => {
                    e.preventDefault();
                    if (!isDrawing) return;
                    
                    const touch = e.touches[0];
                    const rect = canvas.getBoundingClientRect();
                    const x = touch.clientX - rect.left;
                    const y = touch.clientY - rect.top;
                    
                    ctx.beginPath();
                    ctx.lineWidth = 40;
                    ctx.lineCap = 'round';
                    ctx.moveTo(lastX, lastY);
                    ctx.lineTo(x, y);
                    ctx.stroke();
                    
                    [lastX, lastY] = [x, y];
                    
                    // Check if enough has been scratched
                    checkScratched(canvas, card);
                });
                
                canvas.addEventListener('touchend', () => {
                    isDrawing = false;
                });
            });
            
            // Function to check if enough of the card has been scratched
            function checkScratched(canvas, card) {
                const ctx = canvas.getContext('2d');
                const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                const pixels = imageData.data;
                let transparentPixels = 0;
                
                for (let i = 3; i < pixels.length; i += 4) {
                    if (pixels[i] === 0) transparentPixels++;
                }
                
                const totalPixels = pixels.length / 4;
                const scratchedPercent = (transparentPixels / totalPixels) * 100;
                
                // If more than 40% is scratched, reveal the full message
                if (scratchedPercent > 40) {
                    canvas.style.opacity = '0';
                    canvas.style.transition = 'opacity 0.5s ease';
                    
                    // Add a celebration effect
                    card.style.transform = 'scale(1.05)';
                    card.style.transition = 'transform 0.3s ease';
                    setTimeout(() => {
                        card.style.transform = 'scale(1)';
                    }, 300);
                }
            }
            
            // Add floating animation to portraits on hover
            const portraits = document.querySelectorAll('.portrait');
            portraits.forEach(portrait => {
                portrait.addEventListener('mouseenter', () => {
                    const randomRotate = (Math.random() * 4) - 2; // Between -2 and 2 degrees
                    portrait.style.transform = `translateY(-10px) rotate(${randomRotate}deg)`;
                });
                
                portrait.addEventListener('mouseleave', () => {
                    portrait.style.transform = 'translateY(0) rotate(0deg)';
                });
            });
            
            // Add confetti effect on page load
            setTimeout(() => {
                createConfetti();
            }, 1000);
        });
        
        // Simple confetti effect
        function createConfetti() {
            const colors = ['#ffb8e0', '#b8e1ff', '#d9b8ff', '#b8ffc9', '#fff9b8'];
            const container = document.querySelector('.container');
            
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.style.position = 'absolute';
                confetti.style.width = Math.random() * 10 + 5 + 'px';
                confetti.style.height = Math.random() * 10 + 5 + 'px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.borderRadius = '50%';
                confetti.style.top = '-50px';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.zIndex = '9999';
                confetti.style.opacity = '0.8';
                
                document.body.appendChild(confetti);
                
                // Animate confetti falling
                const animation = confetti.animate([
                    { transform: 'translateY(0) rotate(0deg)', opacity: 0.8 },
                    { transform: `translateY(${window.innerHeight + 100}px) rotate(${Math.random() * 360}deg)`, opacity: 0 }
                ], {
                    duration: Math.random() * 3000 + 2000,
                    easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
                });
                
                // Remove confetti after animation
                animation.onfinish = () => {
                    confetti.remove();
                };
            }
        }
    </script>
</body>
</html>
```
